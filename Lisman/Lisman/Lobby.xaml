<Window x:Class="Lisman.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Lisman"
        mc:Ignorable="d"
        Title="Lobby" Height="450" Width="668" Background="White">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="164,22,164,0" Text="Buscando Jugadores"
            Style="{StaticResource MaterialDesignDisplay3TextBlock}" FontFamily="Lato Black" FontSize="36"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="156,83,232,0" Text="Jugadores encontrados"
            Style="{StaticResource MaterialDesignDisplay3TextBlock}" FontFamily="Lato Black" FontSize="25" Width="272"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="432,83,164,0" Text="4 / 0"
            Style="{StaticResource MaterialDesignDisplay3TextBlock}" FontFamily="Lato Black" FontSize="25" Width="64"/>

        <ProgressBar
          Style="{StaticResource MaterialDesignCircularProgressBar}"
            
          Value="35"
          IsIndeterminate="True"  Margin="258,184,252,85" Width="150" Height="150" />
    </Grid>
</Window>
